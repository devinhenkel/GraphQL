type User {
  id: ID! @unique
  firstname: String!
  lastname: String!
  email: String! @unique
  posts: [Post!]!
}

type Post {
  id: ID! @unique
  title: String!
  body: String!
  author: User!
  published: Boolean!
  comments: [Comment!]!
}

type Comment {
    id: ID! @unique
    text: String!
    author: User!
    post: Post!
}
